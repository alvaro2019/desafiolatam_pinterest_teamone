<div class="container">
  <h2>Iniciar Sesión</h2>
    <div class="row">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.label :email, "Correo Electrónico" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>'form-control', :placeholder=> "Ingrese su Correo Electrónico" %>
          </div>

          <div class="field form-group">
            <%= f.label :password, "Contraseña" %><br />
            <%= f.password_field :password, autocomplete: "current-password", :class=>'form-control', :placeholder=> "Ingrese su Contraseña" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordarme" %>
            </div>
          <% end %>

          <div class="actions form-group">
            <%= f.submit "Ingresar", :class=>'btn btn-primary' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>